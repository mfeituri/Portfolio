  <script>
    // Fade-in on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("visible");
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });
    document.querySelectorAll(".fade-in").forEach(el => observer.observe(el));

    // App icons fade-in and scroll to project
    const icons = document.querySelectorAll("#app-icons img");
    icons.forEach((icon, index) => {
      setTimeout(() => {
        icon.classList.remove("opacity-0", "translate-y-6");
        icon.classList.add("transition-transform", "duration-700", "ease-out", "opacity-100");
      }, index * 200);

      icon.addEventListener("click", () => {
        const targetId = icon.dataset.target;
        const targetEl = document.getElementById(targetId);
        if(targetEl) targetEl.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    });

    // TAB SWITCHING
    const tabs = document.querySelectorAll(".tab-btn");
    const projectsTab = document.getElementById("projects-tab");
    const resumeWorkTab = document.getElementById("resume-work-tab");
    const contactTab = document.getElementById("contact-tab");

 tabs.forEach(tab => {
  tab.addEventListener("click", () => {
    tabs.forEach(t => {
      t.classList.remove("text-purple-600", "border-purple-600");
      t.classList.add("text-gray-600");
    });
    projectsTab.classList.add("hidden");
    resumeWorkTab.classList.add("hidden");
    contactTab.classList.add("hidden");

    const tabName = tab.dataset.tab;
    if(tabName === "projects") projectsTab.classList.remove("hidden");
    if(tabName === "resume-work") resumeWorkTab.classList.remove("hidden");
    if(tabName === "contact") contactTab.classList.remove("hidden");

    tab.classList.add("text-purple-600", "border-purple-600");
  });
});

