---
import { projects } from "../../data/projects";

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) {
  throw new Error(`Project not found: ${slug}`);
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{project.title} - Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-gradient-to-b from-gray-50 to-gray-200 text-gray-900 font-sans">
    <main class="max-w-4xl mx-auto py-20 px-6">
      <h1 class="text-5xl font-bold mb-6 text-center">{project.title}</h1>
      <p class="text-lg text-center max-w-2xl mx-auto mb-10">{project.description}</p>

      {project.demoVideo ? (
        <video
          src={project.demoVideo}
          controls
          autoplay
          muted
          loop
          class="rounded-xl shadow-xl mb-10 mx-auto w-full max-h-[600px] bg-black"
        />
      ) : (
        <img
          src={project.image}
          alt={project.title}
          class="rounded-xl shadow-xl mb-10 mx-auto w-full max-h-[400px] object-cover"
        />
      )}

      <h2 class="text-2xl font-semibold mb-4">Tech Stack</h2>
      <ul class="flex flex-wrap gap-3 mb-8">
        {project.tech.map((t) => (
          <li class="px-4 py-2 bg-purple-100 text-purple-700 rounded-lg font-medium">{t}</li>
        ))}
      </ul>

      <div class="flex gap-4 justify-center">
        {project.github && (
          <a
            href={project.github}
            target="_blank"
            class="bg-gray-900 text-white px-6 py-3 rounded-xl hover:bg-gray-700"
          >
            View on GitHub
          </a>
        )}
        {project.link && (
          <a
            href={project.link}
            target="_blank"
            class="bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700"
          >
            Live Demo
          </a>
        )}
      </div>

      <div class="mt-12 text-center">
        <a href="/" class="text-purple-600 font-medium hover:underline">‚Üê Back to Portfolio</a>
      </div>
    </main>
  </body>
</html>
